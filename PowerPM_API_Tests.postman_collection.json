	"item": [
		{
			"name": "1. Login and Get Token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = JSON.parse(responseBody);",
							"pm.collectionVariables.set(\"accessToken\", jsonData.access);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"adminpassword\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/login/",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"login",
						""
					]
				},
				"description": "Login with your admin credentials to retrieve an access token. The token is automatically saved to a collection variable named `accessToken`."
			},
			"response": []
		},
		{
			"name": "2. Project Detail View",
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
